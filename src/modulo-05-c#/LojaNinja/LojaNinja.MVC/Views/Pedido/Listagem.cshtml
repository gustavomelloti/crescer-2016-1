@model IEnumerable<LojaNinja.MVC.Models.PedidoModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a href="@Url.Action("Cadastro")">
        <i id="iconeCadastrar" class="fa fa-plus-circle" aria-hidden="true"></i>
    </a>
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DataPedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataEntrega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeProduto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PedidoUrgente)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEntrega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @((bool)item.PedidoUrgente ? "Sim" : "Não")
            </td>
            <td>
                <a href="@Url.Action("Editar", new { id = item.Id })"  class="iconesGerenciador">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                </a>
                <a href="@Url.Action("Detalhes", new { id = item.Id })" class="iconesGerenciador">
                    <i class="fa fa-eye" aria-hidden="true"></i>
                </a>

                <a href="@Url.Action("Excluir", new { id = item.Id })" class="iconesGerenciador">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
    }
</table>