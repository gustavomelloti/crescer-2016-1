
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Custom/principal.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    @{
        if (LojaNinja.MVC.Services.SessaoService.EstaLogado)
        { 
            var usuario = ((LojaNinja.MVC.Models.Login.UsuarioLogadoModel)Session["USUARIO_LOGADO"]);
            @usuario.Nome
        }
    }
       
    <div class="container"> 
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script> 
    @RenderSection("scripts", false)   
</body>
</html>
